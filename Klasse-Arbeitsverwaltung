package arbeitsverwaltung;

public class Arbeitsverwaltung {

	private String name;
	private String Abteilung;
	private int Gehalt;
	private int Personalnummer;
	
	
	Arbeitsverwaltung(String name , String Abteilung, int Gehalt, int Personalnummer){
		this.name = name;
		this.Abteilung = Abteilung;
		this.Gehalt = Gehalt;
		this.Personalnummer = Personalnummer;
	}
	
	public void erhoeheGehalt(int Erhoehung) {
		this.Gehalt = this.Gehalt + Erhoehung;
		System.out.println(this.name + " Dein Gehalt wurde auf " + this.Gehalt + " EUR erhoeht.");
	}
	
	public void versetzeInAbteilung(String Versetzung) {
		this.Abteilung = Versetzung;
		System.out.println(this.name + " Du wurdest in die Abteilung " + this.Abteilung + " versetzt.");
	}
	
	public void Ausweis() {
		System.out.println("Name: "+this.name + "\n" + "Abteilung: "+this.Abteilung + "\n" + "Personalnummer: " +this.Personalnummer);
	
	}
		
		
}
	

