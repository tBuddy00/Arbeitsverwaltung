package arbeitsverwaltung;
import java.util.ArrayList;


public class Abteilung {

	ArrayList<Arbeitsverwaltung> ListeArbeitskraft = new ArrayList<Arbeitsverwaltung>();
	
	int Abteilungsummer;
	String Abteilungsbezeichnung;
	
	
	Abteilung(int Abteilungsnummer, String Abteilungsbezeichnung){
		this.Abteilungsummer = Abteilungsnummer;
		this.Abteilungsbezeichnung = Abteilungsbezeichnung; 
	}
	
	void HinzufuegenArbeitskraft(Arbeitsverwaltung arbeitskraft) {
		if(ListeArbeitskraft != null) {
			ListeArbeitskraft.add(arbeitskraft);
			
		}
		
	}
		
}
